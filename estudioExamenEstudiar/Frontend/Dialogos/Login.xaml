<Window x:Class="estudioExamenEstudiar.Frontend.Dialogos.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:estudioExamenEstudiar.Frontend.Dialogos"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Login"
        Height="450" 
        Width="800">

    <Grid>

        <!-- Fondo rojo izquierdo -->
        <Grid Background="#dd243c" Margin="20">
            <StackPanel Orientation="Vertical">

                <TextBlock Text="Bienvenidos !"
                           FontSize="40"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="30,30,0,10" />

                <TextBlock Text="INVENTARIO MATISSE"
                           FontSize="18"
                           FontWeight="Normal"
                           Foreground="White"
                           Margin="30,0,0,0" />

                <Image Source="/Estilos/logoIESblanco.png"
                       Width="80"
                       HorizontalAlignment="Left"
                       Margin="30,180,0,0" />

                <TextBlock Text="IES HENRI MATISSE"
                           FontSize="12"
                           FontWeight="Normal"
                           Foreground="White"
                           Margin="30,0,0,0" />

            </StackPanel>
        </Grid>

        <!-- Panel blanco derecho (Login) -->
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Right"
                    Width="300"
                    Margin="0,0,80,0"
                    Background="White">

            <TextBlock Text="LOGIN"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,30"
                       FontSize="20"
                       FontWeight="Normal"
                       Foreground="#dd243c" />

            <TextBox Width="200"
                     Margin="0,0,0,30"
                     FontWeight="Black"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Nombre de Usuario"
                     x:Name="nombreUsuario"/>

            <PasswordBox Width="200"
                         Margin="0,0,0,55"
                         FontWeight="Black"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                         materialDesign:HintAssist.Hint="Clave de Acceso"
                         x:Name="claveUsuario"/>

            <Button Content="Login"
                    Width="200"
                    Background="#dd243c"
                    Foreground="White"
                    FontWeight="Bold"
                    Margin="0,0,0,45"
                    Click="onBotonLoginPulsado"/>

            <Button Content="¿TIENES CUENTA?"
                    Width="200"
                    Background="White"
                    Foreground="#dd243c"
                    Margin="0,0,0,45" />

            <TextBlock Text="¿Olvidaste la Contraseña?"
                       Foreground="#dd243c"
                       HorizontalAlignment="Center"
                       FontSize="14" />

        </StackPanel>

    </Grid>
</Window>